int main () {

  char cipher[50], cipher2[50];
  int shift = 3;


  printf("Enter text to be encrypted IN CAPITAL LETTERS ONLY: ");
  scanf("%s", cipher);

  caesarcapital (cipher, shift);


  printf("Enter text to be encrypted IN  SMALL LETTERS ONLY: ");
  scanf("%s", cipher2);

  caesarsmall (cipher2, shift);

  return 0;
}

